<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/filter_item_width"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/filter_item_padding_vertical"
    android:paddingTop="@dimen/filter_item_padding_vertical"
    android:paddingLeft="@dimen/filter_item_padding_horizontal"
    android:paddingRight="@dimen/filter_item_padding_horizontal" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:textSize="4.5pt"
        android:textStyle="bold"
        android:id="@+id/filter_title"
        android:gravity="center"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:id="@+id/filter_image" />

</LinearLayout>